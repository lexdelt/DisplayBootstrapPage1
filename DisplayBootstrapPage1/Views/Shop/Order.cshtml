@model DisplayBootstrapPage1.Models.OrderViewModel

<br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">

            <table class="table table-hover">

                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in @Model.PurchaseEx)
                    {
                        <tr>
                            <td class="col-sm-8 col-md-6">
                                <div class="media">
                                    <a class="thumbnail pull-left" href="#"> <img class="media-object" src=@item.Product.PictureLinkSmall style="width: 72px; height: 72px;"> </a>
                                    <div class="media-body">

                                        <h4 class="media-heading"> @Html.ActionLink((@item.Product.Name + " " + @item.Product.SubName), "ShowProduct", "Shop", new { Product_ID = @item.Product.ID }, null)</h4>

                                        <h5 class="media-heading"> by <a href="#">@item.Product.Manufacturer</a></h5>
                                        <span>Status: </span><span class="text-success"><strong>@item.Status</strong></span>
                                        @*<span>Status: </span><span class="text-success"><strong>In Stock</strong></span>*@
                                        @*<span>Status: </span><span class="text-warning"><strong>Leaves warehouse in 2 - 3 weeks</strong></span>*@

                                    </div>
                                </div>
                            </td>
                            <td class="col-sm-1 col-md-1 text-center"><strong>@item.Quantity</strong></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong>@item.Product.Price kr</strong></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong>@item.Total kr</strong></td>
                            <td class="col-sm-1 col-md-1">
                                @*<button type="button" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-remove"></span> Remove
                                    </button>*@

                                <input type="button" class="btn btn-danger" value="Remove" onclick="location.href='@Url.Action("ShoppingCart", "Shop", new{ Product_ID = @item.Product.ID, Quantity = 0 })'" />

                            </td>
                        </tr>
                    }

                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Subtotal</h5></td>
                        <td class="text-right"><h5><strong>@Model.Total kr</strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Estimated shipping</h5></td>
                        <td class="text-right"><h5><strong>@Model.ShippingCost kr</strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong>@Model.GrandTotal kr</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>

                            <a href=@Url.Action("Index", "Shop", new{}) class="btn btn-default">
                                <span class="glyphicon glyphicon-shopping-cart"></span>Continue Shopping
                            </a>
                            @*<button type="button" class="btn btn-default">
                                    <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
                                </button>*@
                        </td>
                        <td>
                            <button type="button" class="btn btn-success">
                                Checkout <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </td>
                    </tr>

                </tbody>

            </table>

        </div>
    </div>
</div>

